{
  "name": "phish-guard-app",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5",
      "@prisma/client": "^7.1.0",
      "better-auth": "^1.4.9"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "bun run --filter '*' dev",
    "build": "bun run --filter '*' build",
    "check-types": "bun run --filter '*' check-types",
    "dev:native": "bun run --filter native dev",
    "dev:web": "bun run --filter web dev",
    "db:push": "bun run --filter @phish-guard-app/db db:push",
    "db:studio": "bun run --filter @phish-guard-app/db db:studio",
    "db:generate": "bun run --filter @phish-guard-app/db db:generate",
    "db:migrate": "bun run --filter @phish-guard-app/db db:migrate"
  },
  "dependencies": {
    "@phish-guard-app/env": "workspace:*",
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@phish-guard-app/config": "workspace:*",
    "@types/node": "^22.13.14",
    "typescript": "catalog:"
  },
  "packageManager": "bun@1.3.6"
}
